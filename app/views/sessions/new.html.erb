<h1 class="text-center">Login</h1>
  <div class="row">
      <div class="col-md-6 offset-md-3">
        <hr>
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group ">
              <%= f.label :email %>
              <%= f.email_field :email,
                  class: "form-control" %>
            </div>
            <div class="form-group ">
              <%= f.label :password %>
              <%= f.password_field :password,
                  class: "form-control" %>
            </div>
              <%= f.submit "Login", class: "btn btn-primary btn-block" %>
        <% end %>
        <div class="signup_link mt-4">
          <%= link_to "If you don't have an account, please create one.", signup_path %>
        </div>
      </div>
  </div>
