<h1>Words Management</h1>
<%= link_to "Create New Word", new_admin_category_word_path, class: "btn btn-primary"%>
<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th scope="col">WORDS</th>
            <th scope="col">ANSWER</th>
            <th scope="col">ACTION</th>
        </tr>
    </thead>
    <tbody>
        <% @words.each do |word| %>
        <tr>
            <th scope="row"><%= word.content %></th>
            <td>#</td>
            <td>
                <%= link_to "EDIT", edit_admin_category_word_path(@category, word),
                                    class: "btn btn-primary" %>
                <%= link_to "DELETE", admin_category_word_path(@category, word),
                    method: :delete, data: { confirm: "You sure?" }, class: "btn btn-primary btn-danger"%>
            </td>
        </tr>
        <%end%>
    </tbody>
</table>
<%= link_to "BACK", admin_categories_path %>
