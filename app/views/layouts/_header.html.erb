<header class="header">
    <nav class="navbar navbar-expand-lg w-75 mx-auto">
        <%= link_to root_path, method: :get do %>
            <div class="nav-title">
                <%= embedded_svg("icon.svg", class: "icon-svg") %>
                English Elearning
            </div>
        <%end%>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if !current_user.nil? && current_user.admin? %>
                    <%= render 'users/user_search'%>
                    <%= link_to "Lessons", :categories, class:"nav-item nav-link" %>
                    <%= link_to "Dashbord", root_url(current_user), class:"nav-item nav-link" %>     
                    <li class="dropdown nav-item nav-link">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <%= current_user.name%>
                        <span class="caret"></span></a>
                        <div class="dropdown-menu">
                            <%= link_to "Users Admin", admin_users_path, class:"nav-item nav-link"%>
                            <%= link_to "Lessons Admin", admin_categories_path, class:"nav-item nav-link"%>
                            <%= link_to "Users", users_path,class:"nav-item nav-link" %>
                            <%= link_to "Logout", session_path(current_user), method: :delete, class:"nav-item nav-link" %>
                        </div>
                    </li>                    
                <% elsif !current_user.nil? %>
                    <%= render 'users/user_search'%>
                    <%= link_to "Lessons", :categories, class:"nav-item nav-link" %>
                    <%= link_to "Dashbord", root_url(current_user), class:"nav-item nav-link" %>
                    <li class="dropdown nav-item nav-link">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <%= current_user.name%>
                        <span class="caret"></span></a>
                        <div class="dropdown-menu">
                            <%= link_to "Users", users_path,class:"nav-item nav-link" %>
                            <%= link_to "Logout", session_path(current_user), method: :delete, class:"nav-item nav-link" %>
                        </div>
                    </li>                    
                <%else%>
                    <%= link_to "Sign-in", login_path,class:"nav-item nav-link" %>
                <%end%>
            </ul>
        </div>
    </nav>
</header>